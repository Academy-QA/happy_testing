generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

  model User {
    id           Int      @id @default(autoincrement())
    firstName    String
    lastName     String
    email        String   @unique
    nationality  String
    phone        String
    password     String
    dishes       Dish[]
    createdAt    DateTime @default(now())
  }

  model Dish {
    id           Int      @id @default(autoincrement())
    name         String
    description  String
    quickPrep    Boolean @default(false)
    prepTime     Int     // minutos
    cookTime     Int     // minutos
    imageUrl     String?
    steps        String[] // pasos de preparación
    calories     Int?     // calorías totales (opcional)
    user         User   @relation(fields: [userId], references: [id])
    userId       Int
    createdAt    DateTime @default(now())
  }
